<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KotlinMessenger" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">

        <!-- Primary brand color. -->
        <!--       ActionBar -->
        <item name="colorPrimary">@color/white</item>
        <!--        ActionBar Title Color-->
        <item name="titleTextColor">@color/black</item>
        <!--        ActionBarの上 -->
        <item name="colorPrimaryVariant">@color/black</item>
        <!--        overflow button-->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_small_back_button</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_color</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>

    <!--    タイトル文字変更 [白 -> 黒]-->
    <style name="ChatCustomBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/chat_background</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_small_back_button</item>
    </style>

    <style name="Theme.KotlinMessenger.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KotlinMessenger.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KotlinMessenger.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  EditText color when Focus   -->
    <style name="EditTextFocusTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--   下線     -->
        <item name="colorControlNormal">@color/button_color</item>
        <!--   focus時の色     -->
        <item name="colorControlActivated">@color/button_color</item>
        <!--   文字列が選択されているときの色     -->
        <item name="colorControlHighlight">@color/button_color</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorControlNormal">@color/button_color</item>
        <item name="colorControlActivated">@color/button_color</item>
        <item name="colorControlHighlight">@color/button_color</item>
        <item name="android:colorAccent">@color/button_color</item>
    </style>

</resources>